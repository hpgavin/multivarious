// VS Code allows for // --- comments within launch.json files
// Change ... <USERNAME> ... to your computer login name 
// Edit the path  ... Desktop/Code/module ... " to match your needs

{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Run Project (debug with selected PYTHONPATH)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",

      // linux - HPG's installation path 
      "linux": {
        "env": {
          "PYTHONPATH": "$HOME/Desktop/Code/module_1:$HOME/Desktop/Code/module_2"
        }
      },

      // macOS - edit this if you use macOS 
      "osx": {
        "env": {
          "PYTHONPATH": "/Users/<USERNAME>/Desktop/Code/module_1:/Users/<USERNAME>/Desktop/Code/module_2"
        }
      },

      // Windows - edit this if you use Windows 
      "windows": {
        "env": {
          "PYTHONPATH": "C:\\Users\\<USERNAME>\\Desktop\\Code\\module_1;C:\\Users\\<USERNAME>\\Desktop\\Code\\module_2"
        }
      }

    }

  ]
}

